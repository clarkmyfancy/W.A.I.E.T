<div class="header">
    <p class="page_title">WAIET</p>
</div>
<%= "Preferences: "%>
<%= @cat %>,
<%= "Price Range: "%>
<%= @price_range %>
<br>
<% if !@end_of_list %>
<%= link_to "Edit Preferences", preferences_path(categories: params[:categories], prices: params[:prices]) %>
    <% if @size == 0 %>
        <h3>There are no open restaurants with your current preferences:</h3>
    <% else %>
        <h3>Restaurant <%= @count + 1 %> out of <%= @size %> that is open and matches those filters:</h3>
        <h2>__________________________________________________________________________</h2>
        <%= image_tag(@restaurant["image_url"], size: "300x300")%>
        <h4> <%= (@restaurant["name"]) %> </h4>
        <h6> <%= (@restaurant["rating"])%> rating with <%= @restaurant["review_count"]%> reviews.</h6>
        </br>
        <%= button_to "Like", {:controller => "results", :action => "index", 
                :restCategory => @cat, :restPrice => @price_range, :counter => @count += 1, :liked_pos => @count-1, :init => true, random_ind: params[:random_ind]}, {class: "w3-left"} %>
        <%= button_to "Disike", {:controller => "results", :action => "index", 
                :restCategory => @cat, :restPrice => @price_range, :counter => @count, :init => true, random_ind: params[:random_ind]}, {class: "w3-right"} %>
        <h6>___________________________________</h6></br>
    <% end %>
<% else %>
    <% if @final_rests.empty? %>
        <h3>There are no restaurants that you liked with your current preferences</h3>
        <%= link_to "Edit Preferences", preferences_path(categories: params[:categories], prices: params[:prices]) %>
    <% else %>
        <%= link_to "Edit Preferences", preferences_path(categories: params[:categories], prices: params[:prices]) %>
        <h3>Restaurants you liked with your current preferences:</h3>
        <h2>__________________________________________________________________________</h2>
        <% @final_rests.each do |r| %>
            <%= image_tag(r["image_url"], size: "70x70")%>
            <h4> <%= (r["name"]) %> </h4>
            <h6> <%= (r["rating"])%> rating with <%= r["review_count"]%> reviews.</h6>
            <h6>___________________________________</h6></br>
        <% end %>
    <% end %>
<% end %>
    



